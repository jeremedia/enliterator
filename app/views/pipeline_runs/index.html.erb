<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Pipeline Runs</h1>
    <%= link_to "Start New Pipeline", new_pipeline_run_path, 
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @active_runs.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">🔄 Active Runs</h2>
      <div class="grid gap-4">
        <% @active_runs.each do |run| %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <%= render 'pipeline_run_card', run: run %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @failed_runs.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">❌ Failed Runs</h2>
      <div class="grid gap-4">
        <% @failed_runs.each do |run| %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <%= render 'pipeline_run_card', run: run %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @completed_runs.any? %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold mb-4">✅ Completed Runs</h2>
      <div class="grid gap-4">
        <% @completed_runs.each do |run| %>
          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <%= render 'pipeline_run_card', run: run %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @runs.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">No pipeline runs yet</p>
      <%= link_to "Start Meta-Enliterator Pipeline", 
                  pipeline_runs_path(source_type: 'meta_enliterator'),
                  method: :post,
                  class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>