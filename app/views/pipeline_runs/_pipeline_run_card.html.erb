<div class="flex justify-between items-start">
  <div class="flex-1">
    <div class="flex items-center gap-2 mb-2">
      <h3 class="font-semibold">
        <%= link_to "Run ##{run.id}", pipeline_run_path(run), 
                    class: "text-blue-600 hover:text-blue-800" %>
      </h3>
      <span class="text-sm text-gray-500">
        <%= run.ekn.name %>
      </span>
    </div>
    
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-600">Status:</span>
        <span class="font-medium <%= status_color_class(run.status) %>">
          <%= run.status.upcase %>
        </span>
      </div>
      
      <div>
        <span class="text-gray-600">Stage:</span>
        <span class="font-medium">
          <%= run.current_stage_number %>/9 - <%= run.current_stage&.humanize %>
        </span>
      </div>
      
      <div>
        <span class="text-gray-600">Progress:</span>
        <div class="w-full bg-gray-200 rounded-full h-2 mt-1">
          <div class="bg-blue-600 h-2 rounded-full" 
               style="width: <%= (run.current_stage_number / 9.0 * 100).round %>%"></div>
        </div>
      </div>
      
      <div>
        <span class="text-gray-600">Duration:</span>
        <span class="font-medium">
          <%= run.duration_so_far %>s
        </span>
      </div>
    </div>
    
    <% if run.error_message.present? %>
      <div class="mt-2 text-sm text-red-600">
        Error: <%= truncate(run.error_message, length: 100) %>
      </div>
    <% end %>
  </div>
  
  <div class="flex gap-2 ml-4">
    <% case run.status %>
    <% when 'running' %>
      <%= link_to "Pause", pause_pipeline_run_path(run), 
                  method: :post,
                  class: "text-sm bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded" %>
    <% when 'paused', 'failed' %>
      <% if run.can_retry? %>
        <%= link_to "Resume", resume_pipeline_run_path(run), 
                    method: :post,
                    class: "text-sm bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded" %>
      <% end %>
    <% end %>
    
    <%= link_to "Logs", logs_pipeline_run_path(run), 
                class: "text-sm bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded" %>
  </div>
</div>